@inherits PropertyValueDisplay
@attribute [AppliesForType(typeof(string))]

<input type="text" class="input-text" @bind="Value" style="width: 147px" placeholder="Default" />

@code {
    public string? Value
    {
        get => GetValue() as string;
        set
        {
            try
            {
                SetValue(value);
            }
            catch
            {
                // gone
            }
        }
    }
}
